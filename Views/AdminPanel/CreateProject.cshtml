@model ProjectManagement.Models.ViewModels.CreateProjectViewModel

<h2>Создание проекта</h2>

<form asp-action="CreateProject" asp-controller="AdminPanel" method="post" class="form">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name">Название</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Price">Цена</label><br />
        <input asp-for="Price" />
        <span asp-validation-for="Price" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Date">Дедлайн</label><br />
        <input type ="date" asp-for="Date" />
        <span asp-validation-for="Date" />
    </div>
    <div>
        <input type ="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>