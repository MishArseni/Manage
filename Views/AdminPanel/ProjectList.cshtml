@model IEnumerable<ProjectManagement.Models.Project>

<a class="btn" asp-action="CreateProject" asp-controller="AdminPanel">Создать проект</a>
<br>
<table class="table">
    <tr><th>Название</th><th>Дедлайн</th><th>Цена</th></tr>

    @foreach (var project in Model)
    {
        <tr>
            <td>@project.Name</td>
            <td>@project.Date</td>
            <td>@project.Price</td>
            <td>
                <form asp-action="Delete" asp-route-id="@project.ProjectId" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@project.ProjectId">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }

</table>